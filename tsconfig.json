{
    "compilerOptions": {
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "noImplicitThis": false,
        "noImplicitReturns": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": "src"
    },
    "include": [
		"src"
	],
    "exclude": [
        "node_modules",
        "package.jsonnet",
        "package.libsonnet",
        ".vscode-test"
    ],
    "references": [
        { "path": "./client" },
        { "path": "./server" }
	]
}